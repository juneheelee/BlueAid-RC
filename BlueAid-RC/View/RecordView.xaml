<Page
    x:Class="BlueAid_RC.View.RecordView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueAid_RC.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:BlueAid_RC.View"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10"
                   AutomationProperties.HeadingLevel="Level1" 
                   FontSize="30"
                   Text="환자 이름 : "/>
                <TextBlock Margin="10"
                   AutomationProperties.HeadingLevel="Level1" 
                   FontSize="30"
                   Name="txtUserName"
                   Text="이준희"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10"
                   AutomationProperties.HeadingLevel="Level1" 
                   FontSize="30"
                   Text="환자 번호 : "/>
                <TextBlock Margin="10"
                   AutomationProperties.HeadingLevel="Level1" 
                   FontSize="30"
                   Name="txtUserNumber"
                   Text="123456"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>
            <Grid Background="AliceBlue"/>
            <Grid Background="BlueViolet" Grid.Column="1">
                <TextBlock Text="내용 화면" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Grid Background="AliceBlue" Grid.Column="2"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="20" Grid.Column="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">

                <!--<Button x:Name="Button2"
                        Margin="100 0"
                        Width="80" Height="90">
                    <StackPanel>
                        <Image Source="/Images/red.png" Height="52"/>
                    </StackPanel>
                </Button>-->
                <Button Name="VideoButton" Click="VideoButton_Click" IsEnabled="False" Width="80" Height="90">
                    <Grid>
                        <Ellipse x:Name="StartRecordingIcon" Fill="Red" Width="20" Height="20"/>
                        <Rectangle x:Name="StopRecordingIcon" Fill="White" Width="20" Height="20" Visibility="Collapsed"/>
                    </Grid>
                </Button>
                <!--<Button x:Name="Button1"
                        Margin="100 0"
                        >
                    <StackPanel>
                        <Image Source="/Images/blue.png" Height="52"/>
                    </StackPanel>
                </Button>-->
                
            </StackPanel>

            <CaptureElement Grid.Column="2" Name="PreviewControl" Stretch="Fill"/>
            
        </Grid>
    </Grid>

</Page>
